[defunk cairo-test:cairo_context-render [cairo_context]
  ]

[defunk cairo-test []
  [let [[cairo_pdf_surface   [new cairo_pdf_surface   'cairo-test.pdf' 72.0 72.0]]
	[cairo_svg_surface   [new cairo_svg_surface   'cairo-test.svg' 72.0 72.0]]
	[cairo_ps_surface    [new cairo_ps_surface    'cairo-test.ps'  72.0 72.0]]
	[cairo_image_surface [new cairo_image_surface `ARGB32          72   72]]]
    [let [[cairo_pdf_context   [new cairo_context cairo_pdf_surface]]
	  [cairo_svg_context   [new cairo_context cairo_svg_surface]]
	  [cairo_ps_context    [new cairo_context cairo_ps_surface]]
	  [cairo_image_context [new cairo_context cairo_image_surface]]]
      [cairo-test:cairo_context-render cairo_pdf_context]
      [cairo-test:cairo_context-render cairo_svg_context]
      [cairo-test:cairo_context-render cairo_ps_context]
      [cairo-test:cairo_context-render cairo_image_context]
      [have cairo_image_surface write_to_png 'cairo-test.png']
      nil]]]

