				  step_delay_entry
				  
				  play_button
				  stop_button
				  trigger_button
				  update_button
				  cameras_enabled_check_button
				  record_movie_check_button
				  
				  movie_vbox
				  movie_gtk_image
				  scale
				  agent_hbox
				  
				  [agent_widget_frame [frame]]
				  
				  [simulation_playing           nil]
				  [last_stepped_simulation_time nil]
