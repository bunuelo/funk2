					 [new mindmon_save_project_dialog this]]
				   nil]
			     
			     [have file_export_movie_menu_item signal_connect 'activate'
				   [funk []
					 [new mindmon_export_movie_dialog this]]
				   nil]
			     
			     [have file_exit_menu_item signal_connect 'activate'
