				   nil]
			     
			     [= edit_menu_item             [gtk-menu_item-new 'Edit']]
			     [= edit_menu                  [gtk-menu-new]]
			     [= edit_preferences_menu_item [gtk-menu_item-new 'Preferences...']]
			     [have menu_bar       append  edit_menu_item]
			     [set  edit_menu_item submenu edit_menu]
