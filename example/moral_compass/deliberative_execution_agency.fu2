[deframe monitor_execution_of_current_plan [resource] []
  [new []
       [construct resource [type this]
		  [funk []
			[have this-resource think_to_self 'Monitoring execution of current plan.']
			nil]]
       nil]]


[deframe deliberative_execution_agency [agency] []
  [new []
       [construct agency `execution]
       
       [have this add_resource [new monitor_execution_of_current_plan]]
       
       this]]


