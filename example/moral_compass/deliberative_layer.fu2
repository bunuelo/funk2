'deliberative_layer'

[deframe deliberative_layer [mental_layer] []
  [new []
       [construct mental_layer 2 `deliberative]
       [have this add_agency [new deliberative_physical_event_knowledge_agency]]
       [have this add_agency [new deliberative_physical_type_relationship_knowledge_agency]]
       [have this add_agency [new deliberative_goal_knowledge_agency]]
       [have this add_agency [new deliberative_goal_creation_agency]]
       [have this add_agency [new deliberative_execution_agency]]
       this]]

[deftypefunk deliberative_layer execute create_knowledge []
  [new meta_semantic_knowledge_base `deliberative_knowledge [get [get this mind] semantic_realm]]
  [have [get this agency `physical_event_knowledge]             create_knowledge]
  [have [get this agency `physical_type_relationship_knowledge] create_knowledge]
  [have [get this agency `goal_knowledge]                       create_knowledge]
  [have [get this agency `goal_creation]                        create_knowledge]
  nil]

[deftypefunk deliberative_layer execute connect_knowledge_reflection []
  [have [get this agency `physical_event_knowledge]             connect_knowledge_reflection]
  [have [get this agency `physical_type_relationship_knowledge] connect_knowledge_reflection]
  [have [get this agency `goal_knowledge]                       connect_knowledge_reflection]
  [have [get this agency `goal_creation]                        connect_knowledge_reflection]
  nil]

[deftypefunk deliberative_layer execute create_builtin_goals []
  [have [get this agency `goal_creation] create_builtin_goals]]



