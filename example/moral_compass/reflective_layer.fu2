'reflective_layer'

[deframe reflective_layer [mental_layer] []
  [new []
       [construct mental_layer 3 `reflective]
       [have this add_agency [new reflective_meta_mental_knowledge_agency]]
       [have this add_agency [new reflective_credit_assignment_agency]]
       this]]

[deftypefunk reflective_layer execute create_knowledge []
  [new meta_semantic_knowledge_base `reflective_knowledge [get [get this mind] semantic_realm]]
  [have [get this agency `meta_mental_knowledge] create_knowledge]
  nil]

[deftypefunk reflective_layer execute connect_knowledge_reflection []
  [have [get this agency `meta_mental_knowledge] connect_knowledge_reflection]
  nil]

