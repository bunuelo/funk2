'agent'

[deframe          agent [frame] [agencies_frame]]
[deftypeconstruct agent []
  [set this agencies_frame [frame]]
  this]

[deftypefunk agent get agency [name]
  [have [get this agencies_frame] lookup name]]

[deftypefunk agent execute call [agency_name resource_name :rest args]
  [print 'dbg 0']
  [let [[agencies_frame [get this agencies_frame]]]
    [print 'dbg 1']
    [let [[agency [have agencies_frame lookup agency_name]]]
      [print 'dbg 2']
      [let [[resources_frame [get agency resources_frame]]]
	[print 'dbg 3']
	[let [[resource [have resources_frame lookup resource_name]]]
	  [print 'dbg 4']
	  [have-apply resource call args]]]]]]

[defmetro defagency [agent name]
  `[have [get ,agent agencies_frame] add [quote ,name] [new agency]]]


