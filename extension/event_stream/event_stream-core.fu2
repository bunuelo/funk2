[defcore event_stream 'extension/event_stream/.libs/libf2e_event_stream.so']

[defcorefunk event_stream-core_extension-ping         event_stream event_stream__core_extension__ping]
[defcorefunk event_stream-core_extension-define_types event_stream event_stream__core_extension__define_types]
[defcorefunk event_stream-core_extension-initialize   event_stream event_stream__core_extension__initialize]

[event_stream-core_extension-ping]

[event_stream-core_extension-define_types]

[deftypefunk event_stream_iterator execute wait_for_current []
  [print 'waiting for event.']
  [let [[event [get this current]]]
    [while [null event]
      [wait-for-trigger [get [get this event_stream] add_trigger]]
      [print 'got add trigger!  8D']
      [= event [get this current]]]
    [print 'got event!']
    event]]

