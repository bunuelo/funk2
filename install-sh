#!/bin/sh
echo ""
echo "make: performing system-wide installation of funk2"
echo ""
echo "  install__bin__dir     = /usr/bin/"
echo "  install__include__dir = /usr/include/funk2/"
echo ""
mkdir -m755 -p /usr/share/funk2/img/
mkdir -m755 -p /usr/bin/
mkdir -m755 -p /usr/include/funk2/
mkdir -m755 -p /usr/bin/
mkdir -m755 -p /usr/share/funk2/icons/
mkdir -m755 -p /usr/share/man/man1/
install -m755 ./bin/funk2 /usr/bin/funk2
install -m644 ./img/bootstrap.img /usr/share/funk2/img/bootstrap.img
install -m644 c/*.h /usr/include/funk2/
install -m644 ./icons/* /usr/share/funk2/icons/
gzip -c debian/funk2.1 > debian/funk2.1.gz
install -m644 debian/funk2.1.gz /usr/share/man/man1/
