[defunk optimize_test-test_mode-enter []
  [terminal_format standard-terminal '\noptimize_test: entering test mode.']
  [globalize-funk funk-new_with_name_and_environment &funk-new_with_name_and_environment-optimize]]

[defunk optimize_test-test_mode-exit []
  [globalize-funk funk-new_with_name_and_environment &funk-new_with_name_and_environment-original]
  [terminal_format standard-terminal '\noptimize_test: successfully exited test mode.']]


[defunk optimize-test []
  [optimize_test-begin_test_mode]
  [shelter [terminal_format standard-terminal '\noptimize_test: successfully entered test mode.']
	   [terminal_format standard-terminal '\noptimize_test: exiting test mode.']
	   ]
  [optimize_test-end_test_mode]]

